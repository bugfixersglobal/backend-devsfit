#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Get the commit message
commit_regex='^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
  echo "âŒ Invalid commit message format!"
  echo ""
  echo "ğŸ“ Please use the following format:"
  echo "   <type>[optional scope]: <description>"
  echo ""
  echo "ğŸ·ï¸  Valid types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
  echo ""
  echo "ğŸ“– Examples:"
  echo "   feat(auth): add OAuth2 integration"
  echo "   fix: resolve memory leak in user service"
  echo "   docs: update API documentation"
  echo ""
  exit 1
fi

echo "âœ… Commit message format is valid!" 