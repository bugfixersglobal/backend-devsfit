# ===================
# STAGING ENVIRONMENT
# ===================

# GitHub Repository (for image pulling)
GITHUB_REPOSITORY=bugfixersglobal/backend-devsfit
IMAGE_TAG=staging

# Database Configuration
POSTGRES_USER=devsfit_staging_user
POSTGRES_PASSWORD=devsfit_staging_secure_password_2024

# Redis Configuration
REDIS_PASSWORD=devsfit_redis_secure_password_2024

# RabbitMQ Configuration
RABBITMQ_USER=devsfit_mq_staging_user
RABBITMQ_PASSWORD=devsfit_rabbitmq_secure_password_2024
RABBITMQ_ERLANG_COOKIE=devsfit_erlang_cookie_secure_2024

# JWT Configuration
JWT_SECRET=devsfit_jwt_secret_for_staging_environment_2024_secure_minimum_64_characters_long
JWT_REFRESH_SECRET=devsfit_refresh_secret_for_staging_environment_2024_secure_minimum_64_characters_long

# Service URLs
API_GATEWAY_URL=https://api-staging.devsfit.com
FRONTEND_URL=https://staging.devsfit.com

# SSL Configuration
SSLCOMMERZ_STORE_ID=your-staging-store-id
SSLCOMMERZ_STORE_PASSWORD=your-staging-store-password
SSLCOMMERZ_SANDBOX=true

# Email Configuration
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=your-sendgrid-api-key-staging
EMAIL_FROM=noreply@staging.devsfit.com

# AWS Configuration (for backups and file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-staging
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-staging
AWS_S3_BUCKET=devsfit-staging-backups
AWS_REGION=us-east-1

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-staging-password
GRAFANA_SECRET_KEY=your-grafana-secret-key-staging-min-32-chars
JAEGER_ENDPOINT=http://jaeger:4318/v1/traces

# Alerting Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK/STAGING
SMTP_PASSWORD=your-smtp-password-staging

# Security Configuration
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=500
CORS_ORIGINS=https://staging.devsfit.com

# Performance Configuration
NODE_ENV=staging
LOG_LEVEL=debug
CACHE_TTL=1800

# Feature Flags
REGISTRATION_ENABLED=true
SOCIAL_LOGIN_ENABLED=true
EMAIL_VERIFICATION_ENABLED=true
SMS_VERIFICATION_ENABLED=false
TWO_FACTOR_AUTH_ENABLED=true
ANALYTICS_ENABLED=true
BACKUP_ENABLED=true

# Business Configuration
DEFAULT_CURRENCY=USD
DEFAULT_TAX_RATE=0.00
INVOICE_NUMBER_PREFIX=STG-INV
COUPON_CODE_PREFIX=STG-DEVSFIT

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_PATH=/opt/devsfit/staging/uploads

# Session Configuration
SESSION_SECRET=your-secure-session-secret-staging-min-32-chars
SESSION_TIMEOUT=1800
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# API Configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Database Pool Configuration
DB_POOL_MIN=5
DB_POOL_MAX=50
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# Redis Pool Configuration
REDIS_POOL_MIN=5
REDIS_POOL_MAX=50
REDIS_POOL_IDLE_TIMEOUT=30000

# Monitoring Ports
PROMETHEUS_PORT=9090
GRAFANA_PORT=3013
JAEGER_PORT=16686
ALERTMANAGER_PORT=9093

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_RETRIES=3

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-staging-min-32-chars

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/staging-cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/staging-key.pem
SSL_PROTOCOLS=TLSv1.2,TLSv1.3
SSL_CIPHERS=ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256

# Load Balancer Configuration
LB_ALGORITHM=least_conn
LB_HEALTH_CHECK_INTERVAL=30s
LB_HEALTH_CHECK_TIMEOUT=5s
LB_MAX_FAILS=3
LB_FAIL_TIMEOUT=30s
