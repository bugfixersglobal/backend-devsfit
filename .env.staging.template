# ===================
# STAGING ENVIRONMENT
# ===================

# GitHub Repository (for image pulling)
GITHUB_REPOSITORY=your-org/devsfit-backend

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-staging-password

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-for-staging-at-least-32-chars
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-for-staging-at-least-32-chars

# Service URLs
API_GATEWAY_URL=https://staging-api.devsfit.com
FRONTEND_URL=https://staging.devsfit.com

# SSL Configuration
SSLCOMMERZ_STORE_ID=your-staging-store-id
SSLCOMMERZ_STORE_PASSWORD=your-staging-store-password
SSLCOMMERZ_SANDBOX=true

# Monitoring
JAEGER_ENDPOINT=http://jaeger:4318/v1/traces

# Email Configuration
EMAIL_HOST=smtp.mailgun.org
EMAIL_PORT=587
EMAIL_USER=your-staging-email
EMAIL_PASS=your-staging-email-password

# Security
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
