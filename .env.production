# ===================
# PRODUCTION ENVIRONMENT
# ===================

# GitHub Repository (for image pulling)
GITHUB_REPOSITORY=bugfixersglobal/backend-devsfit
IMAGE_TAG=main

# Database Configuration
POSTGRES_USER=devsfit_prod_user
POSTGRES_PASSWORD=your-ultra-secure-production-password-min-32-chars

# Redis Configuration
REDIS_PASSWORD=your-ultra-secure-redis-password-min-32-chars

# RabbitMQ Configuration
RABBITMQ_USER=devsfit_mq_user
RABBITMQ_PASSWORD=your-ultra-secure-rabbitmq-password-min-32-chars
RABBITMQ_ERLANG_COOKIE=your-ultra-secure-erlang-cookie-min-32-chars

# JWT Configuration
JWT_SECRET=your-ultra-secure-jwt-secret-for-production-minimum-64-characters-long
JWT_REFRESH_SECRET=your-ultra-secure-refresh-secret-for-production-minimum-64-characters-long

# Service URLs
API_GATEWAY_URL=https://api.devsfit.com
FRONTEND_URL=https://devsfit.com

# SSL Configuration
SSLCOMMERZ_STORE_ID=your-production-store-id
SSLCOMMERZ_STORE_PASSWORD=your-production-store-password
SSLCOMMERZ_SANDBOX=false

# Email Configuration
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=your-sendgrid-api-key
EMAIL_FROM=noreply@devsfit.com

# AWS Configuration (for backups and file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=devsfit-production-backups
AWS_REGION=us-east-1

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password
GRAFANA_SECRET_KEY=your-grafana-secret-key-min-32-chars
JAEGER_ENDPOINT=http://jaeger:4318/v1/traces

# Alerting Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SMTP_PASSWORD=your-smtp-password

# Security Configuration
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=1000
CORS_ORIGINS=https://devsfit.com

# Performance Configuration
NODE_ENV=production
LOG_LEVEL=info
CACHE_TTL=3600

# Feature Flags
REGISTRATION_ENABLED=true
SOCIAL_LOGIN_ENABLED=true
EMAIL_VERIFICATION_ENABLED=true
SMS_VERIFICATION_ENABLED=true
TWO_FACTOR_AUTH_ENABLED=true
ANALYTICS_ENABLED=true
BACKUP_ENABLED=true

# Business Configuration
DEFAULT_CURRENCY=USD
DEFAULT_TAX_RATE=0.00
INVOICE_NUMBER_PREFIX=INV
COUPON_CODE_PREFIX=DEVSFIT

# File Upload Configuration
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_PATH=/opt/devsfit/uploads

# Session Configuration
SESSION_SECRET=your-ultra-secure-session-secret-min-32-chars
SESSION_TIMEOUT=3600
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# API Configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Database Pool Configuration
DB_POOL_MIN=10
DB_POOL_MAX=100
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# Redis Pool Configuration
REDIS_POOL_MIN=10
REDIS_POOL_MAX=100
REDIS_POOL_IDLE_TIMEOUT=30000

# Monitoring Ports
PROMETHEUS_PORT=9090
GRAFANA_PORT=3013
JAEGER_PORT=16686
ALERTMANAGER_PORT=9093

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_RETRIES=3

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-min-32-chars

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_PROTOCOLS=TLSv1.2,TLSv1.3
SSL_CIPHERS=ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256

# Load Balancer Configuration
LB_ALGORITHM=least_conn
LB_HEALTH_CHECK_INTERVAL=30s
LB_HEALTH_CHECK_TIMEOUT=5s
LB_MAX_FAILS=3
LB_FAIL_TIMEOUT=30s
